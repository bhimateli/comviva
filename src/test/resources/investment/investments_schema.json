{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "total_investments": {
      "type": "number",
      "minimum": 0
    },
    "investment_summary": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "amount": {
            "type": "number",
            "minimum": 0
          },
          "current_value": {
            "type": "number",
            "minimum": 0
          }
        },
        "required": ["type", "amount", "current_value"]
      }
    },
    "top_performing_investment": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "growth": {
          "type": "number"
        }
      },
      "required": ["type", "growth"]
    }
  },
  "required": ["total_investments", "investment_summary", "top_performing_investment"]
}
