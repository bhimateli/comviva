{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "total_liabilities": {
      "type": "number",
      "minimum": 0
    },
    "liability_details": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "remaining_balance": {
            "type": "number",
            "minimum": 0
          },
          "monthly_payment": {
            "type": "number",
            "minimum": 0
          },
          "interest_rate": {
            "type": "number",
            "minimum": 0
          }
        },
        "required": ["type", "remaining_balance", "monthly_payment", "interest_rate"]
      }
    }
  },
  "required": ["total_liabilities", "liability_details"]
}
